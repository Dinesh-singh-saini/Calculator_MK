<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/spOP"
            android:visibility="gone"
            android:animateLayoutChanges="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonPov"
                android:onClick="onClickOperator"
                style="@style/spOp"
                android:text="^" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonSqRoot"
                style="@style/spOp"
                android:text="âˆš"
                android:onClick="onClickOperator" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonPi"
                android:onClick="onClickNum"
                style="@style/spOp"
                android:text="ð…" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonFact"
                android:onClick="onClickFact"
                style="@style/spOp"
                android:text="!" />

            <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonE"
            android:onClick="onClickNum"
            style="@style/spOp"
            android:text="e" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonAC"
                android:onClick="onClickClear"
                style="@style/combtn"
                android:textColor="@color/green"
                android:textSize="32sp"
                android:textStyle="bold"
                android:text="AC" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonBackspace"
                style="@style/combtn"
                android:onClick="onClickBackspace"
                android:textStyle="bold"
                android:text="back"
                app:icon="@drawable/baseline_backspace_24"
                app:iconSize="45dp"
                app:iconTint="@color/cmn" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonMod"
                android:onClick="onClickOperator"
                style="@style/combtn"
                android:textStyle="bold"
                android:text="%" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonDivide"
                android:onClick="onClickOperator"
                style="@style/combtn"
                android:text="Ã·" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                style="@style/combtn"
                android:gravity="center"
                android:onClick="onClickNum"
                android:text="1" />

            <com.google.android.material.button.MaterialButton
                style="@style/combtn"
                android:onClick="onClickNum"
                android:text="2" />

            <com.google.android.material.button.MaterialButton
                style="@style/combtn"
                android:onClick="onClickNum"
                android:text="3" />

            <com.google.android.material.button.MaterialButton
                style="@style/combtn"
                android:onClick="onClickOperator"
                android:text="Ã—" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:onClick="onClickNum"
                style="@style/combtn"
                android:text="4" />

            <com.google.android.material.button.MaterialButton
                android:onClick="onClickNum"
                style="@style/combtn"
                android:text="5" />

            <com.google.android.material.button.MaterialButton
                android:onClick="onClickNum"
                style="@style/combtn"
                android:text="6" />

            <com.google.android.material.button.MaterialButton
                android:onClick="onClickOperator"
                style="@style/combtn"
                android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:onClick="onClickNum"
                style="@style/combtn"
                android:text="7" />

            <com.google.android.material.button.MaterialButton
                android:onClick="onClickNum"
                style="@style/combtn"
                android:text="8" />

            <com.google.android.material.button.MaterialButton
                android:onClick="onClickNum"
                style="@style/combtn"
                android:text="9" />

            <com.google.android.material.button.MaterialButton
                android:onClick="onClickOperator"
                style="@style/combtn"
                android:text="+" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:onClick="onClickNum"
                style="@style/combtn"
                android:text="0" />

            <com.google.android.material.button.MaterialButton
                style="@style/combtn"
                android:id="@+id/button00"
                android:textSize="32sp"
                android:textStyle="bold"
                android:onClick="onClick00"
                android:text="00" />

            <com.google.android.material.button.MaterialButton
                style="@style/combtn"
                android:onClick="onClickNum"
                android:text="."
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:onClick="onClickEquals"
                style="@style/combtn"
                android:text="="
                android:textColor="@color/white"
                android:backgroundTint="@color/green"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#4A4343"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="18dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2" />

    <Button
        android:id="@+id/collapse"
        android:layout_width="55dp"
        android:layout_height="52dp"
        android:backgroundTint="#FDF6FE"
        android:onClick="collapse"
        android:text="âˆ§"
        android:textColor="@color/cmn"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.396" />

    <ScrollView
        android:id="@+id/historyScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/operationTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar">

        <TextView
            android:id="@+id/historyTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="16dp"
            android:textColor="@color/cmn"
            android:textSize="20sp" />
    </ScrollView>

    <TextView
        android:id="@+id/resultTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        style="@style/calculate"
        android:text=""
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2" />


    <TextView
        android:id="@+id/operationTv"
        style="@style/calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/resultTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
